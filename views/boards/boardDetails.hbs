<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Details of {{ post.title }}</h5>
                    <div class="form-label-group">
                        <h5>Title </h5>
                        <label for="title">{{post.title}}
                        </label>
                    </div>
                    <div class="form-label-group">
                        <h5>Description: </h5>
                        <label class="box-description">{{ post.description }}
                        </label>
                    </div>
                    <div class="form-label-group">
                        <h5>Category: </h5>
                        <label for="type">{{post.category}}</label>
                    </div>
                    <br />
                    <button class="btn btn-dark btn-lg download-btn" type="submit"><a href="/boards/{{post._id}}/edit">
                            Edit </a></button>
                    <button class="btn btn-dark btn-lg download-btn" type="submit"><a href="/boards">Go
                            back</a></button>
                </div>
            </div>
        </div>
    </div>