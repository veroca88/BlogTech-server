<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h4 class="card-title text-center">Edit {{post.category}}</h4>
                    <form class="form-signin" id="form" action="/boards/{{post._id}}/update" method="POST">
                        <div class="form-label-group">
                            <div class="form-label-group">
                                <h5>Category </h5>
                                <input type="text" id="category" class="form-control" name="category"
                                    value="{{post.category}}">
                            </div>
                            <div class="form-label-group">
                                <h5>URL / Link </h5>
                                <input type="text" id="url" class="form-control" name="url" value="{{post.url}}">
                            </div>
                            <div class="form-label-group">
                                <h5>Description </h5>
                                <textarea rows="4" type="text" id="description" class="box-description form-control"
                                    name="description">{{post.description}}</textarea>
                            </div>

                            <br />
                            <button class="btn btn-dark btn-lg download-btn" type="submit">Save Updates</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>